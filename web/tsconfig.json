{
  // unfortunately doesnt support modules resolution
  // so you can't write tools/tsconfig.json
  "extends": "../tools/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "types": [
      "node", "react", "react-dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "dist",
    "build"
  ]
}
